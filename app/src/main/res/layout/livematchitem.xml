<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/islive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:background="#FF0000"
                    android:fontFamily="@font/hind_guntur"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="LIVE"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/finish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:background="#6AFF00"
                    android:fontFamily="@font/hind_guntur"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Finished"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Auckland vs Otago, 4th Match (Rescheduled)" />
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Match Type : "/>
                <TextView
                    android:id="@+id/matchType"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="ODI"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Venue : "/>
                <TextView
                    android:id="@+id/venue"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Cobham Oval (New), Whangarei"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Date : "/>
                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="2022-11-30"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Time : "/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="22:00:22"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Status : "/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:text="Otago won by 6 wkts"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Teams : "/>
                <TextView
                    android:id="@+id/teams"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/hind_guntur"
                    android:layout_height="wrap_content"
                    android:text="Auckland &amp; Otago"/>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/team1"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/hind_guntur"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:text="Auckland"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/hind_guntur"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:text="Inning 1"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/t1"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:srcCompat="@drawable/cricket"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Score : "/>
                                    <TextView
                                        android:id="@+id/score1"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="187/10"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Overs : "/>
                                    <TextView
                                        android:id="@+id/overs1"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="45.2"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/team2"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/hind_guntur"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:text="Otago"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/inning2"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/hind_guntur"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:text="Inning 2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/t2"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:srcCompat="@drawable/cricket"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Score : "/>
                                    <TextView
                                        android:id="@+id/score2"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="187/10"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Overs : "/>
                                    <TextView
                                        android:id="@+id/overs2"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="45.2"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/extraInnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/team3"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/hind_guntur"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:text="Inning 2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/t3"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:srcCompat="@drawable/cricket"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Score : "/>
                                    <TextView
                                        android:id="@+id/score11"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="187/10"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Overs : "/>
                                    <TextView
                                        android:id="@+id/overs11"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="45.2"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/team4"
                                android:layout_width="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/hind_guntur"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:text="Inning 2"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/t4"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    app:srcCompat="@drawable/cricket"/>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Score : "/>
                                    <TextView
                                        android:id="@+id/score22"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="187/10"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Overs : "/>
                                    <TextView
                                        android:id="@+id/overs22"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:fontFamily="@font/hind_guntur"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:textColor="#000000"
                                        android:textStyle="bold"
                                        android:text="45.2"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>



                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>